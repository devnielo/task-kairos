{
  "name": "image-processing-api",
  "version": "0.1.0",
  "description": "REST API for image processing tasks with Node.js, TypeScript, Express, MongoDB, and Redis workers",
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "start:dev": "dotenv -e .env -- ts-node-dev --respawn --transpile-only --require tsconfig-paths/register src/main.ts",
    "start:worker": "node dist/infrastructure/workers/task.worker.js",
    "start:worker:dev": "dotenv -e .env -- ts-node-dev --respawn --transpile-only --require tsconfig-paths/register src/infrastructure/workers/task.worker.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "seed": "dotenv -e .env -- ts-node --project tsconfig.json scripts/seed.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^1.7.4",
    "bullmq": "^4.11.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "mongoose": "^8.5.3",
    "morgan": "^1.10.0",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "sharp": "^0.33.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.14.10",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "mongodb-memory-server": "^10.1.4",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "src/**/*.{ts,js,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
